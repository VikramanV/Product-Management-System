using namespace std;


class shop
{
protected:
	int pcode;
	float price;
	float dis;
	string pname;
public:
	void menu();
	void list();
};
class Administrator : public shop
{
public:
	void adminmenu();
	void add();
	void edit();
	void rem();
};
class Buyer : public shop
{
public:
	void buyermenu();
	void receipt();
};


void shop::menu()
{
	Administrator a;
	Buyer b;
m:
	int choice;
	string Username;
	string password;
	char ch;
	cout << "\n\n";
	cout << setw(105) << "______________________________________\n";
	cout << setw(105) << "                                      \n";
	cout << setw(105) << "                                      \n";
	cout << setw(105) << "      Product Management System       \n";
	cout << setw(105) << "                                      \n";
	cout << setw(105) << "______________________________________\n";
	cout << setw(105) << "                                      \n";
	cout << setw(97) << "|  1) Administrator   |\n";
	cout << setw(97) << "|                     |\n";
	cout << setw(97) << "|  2) Buyer           |\n";
	cout << setw(97) << "|                     |\n";
	cout << setw(97) << "|  3) Exit            |\n";
	cout << setw(97) << "|                     |\n";
	cout << endl;
	cout << endl;
	cout << setw(97) << "Please select Your option!  :  ";
	cin >> choice;





	switch (choice)
	{
	case 1:
		cout << " Please Login \n\n";
		cout << " Enter Username  :  ";
		cin >> Username;
		cout << endl;
		cout << " Password  :  ";
		ch = _getch();
		while (ch != 13) // Check for "Enter" key (key code 13)
		{
			password.push_back(ch);
			cout << "*";
			ch = _getch();
		}
		cout << endl;


		if ((Username == "manoj" || Username == "charan" || Username == "vikram" || Username == "aswani") && password == "vamc")
		{
			system("cls");
			cout << "Checking your credentials " << endl;
			cout << "Loading ";
			for (int i = 0; i < 8; i++)
			{

				cout << "..";
				Sleep(1000);
			}
			a.adminmenu();
		}
		else
		{
			cout << "\t\t\tInvalid email/password";
		}
		break;


	case 2:
	{
		system("cls");
		b.buyermenu();

	}

	case 3:
	{
		exit(0);
	}

	default:
	{
		cout << "Please select from the given options";

	}


	}
	goto m;
}

void Administrator::adminmenu()
{
m:
	int choice;
	cout << "\n\n\n";
	cout << setw(105) << "______________________________________\n";
	cout << setw(105) << "                                      \n";
	cout << setw(105) << "          Administrator Menu          \n";
	cout << setw(105) << "______________________________________\n";
	cout << setw(105) << "                                      \n";

	// cout << setw(78)<< " Administrator menu"<<endl;
	cout << setw(98) << "|_____1) Add the product_____|" << endl;
	cout << setw(98) << "|                            |" << endl;
	cout << setw(98) << "|_____2) Modify the product__|" << endl;
	cout << setw(98) << "|                            |" << endl;
	cout << setw(98) << "|_____3) Delete the product__|" << endl;
	cout << setw(98) << "|                            |" << endl;
	cout << setw(98) << "|_____4) Back to main menu___|";
	cout << endl << endl;
	// cout << "\n\n\t Please enter your choice ";
	cout << setw(98) << "Please select Your option!  :  ";
	cin >> choice;

	switch (choice)
	{
	case 1:
		system("cls");
		add();
		break;

	case 2:
		system("cls");
		edit();
		break;

	case 3:
		system("cls");
		rem();
		break;

	case 4:
		system("cls");
		menu();
		break;

	default:
		cout << "Invalid choice!";

	}
	goto m;
}

